<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GenericSearch</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("GenericSearch", "Index", "DefaultSearch", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @{
                        object key = null;
                        this.Url.RequestContext.RouteData.Values.TryGetValue("controller", out key);
                    }
                    <li class="@Html.Raw(key.ToString() == "DefaultSearch" ? "active" : "")">@Html.ActionLink("Default Search Criteria", "Index", "DefaultSearch")</li>
                    <li class="@Html.Raw(key.ToString() == "CustomSearch" ? "active" : "")">@Html.ActionLink("Custom Search Criteria", "Index", "CustomSearch")</li>
                    <li class="@Html.Raw(key.ToString() == "PagedSearch" ? "active" : "")">@Html.ActionLink("Paged Search", "Index", "PagedSearch")</li>
                    <li class="@Html.Raw(key.ToString() == "GrammarSearch" ? "active" : "")">@Html.ActionLink("Grammar Search", "Index", "GrammarSearch")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <h1>@ViewBag.Title</h1>
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
